doctype html
html(lang="ru-RU")
	head
		meta(charset="utf-8")
		meta(name="viewport", content="initial-scale=1.0", width=device-width)
		meta(http-equiv="X-UA-Compatible" content="ie=edge")

		link(rel="stylesheet", href="css/styles.min.purged.css")
		link(rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css")
		
		if (link != 'about') 
			link(rel="prerender" href="/about")
		if (link != 'services')
			link(rel="prerender" href="/services")
		if (link != 'price')
			link(rel="prerender" href="/price")
		if (link != 'reviews')
			link(rel="prerender" href="/reviews")
		if (link != 'contacts')
			link(rel="prerender" href="/contacts")

		title Скупка металлолома
	body
		header
			.container-xl
				.row
					.col-12.d-flex.justify-content-center.align-items-center.mt-4.px-lg-0.header
						a(href="/") 
							img.logo(src="images/logo-black.svg" alt="logo" title="Логотип")
						.geo.d-flex.align-items-center
							img(src="images/geospin.svg")
							address Московская&nbsp;область, 
								br
								| п.&nbsp;Новоивановское, Можайское&nbsp;шоссе&nbsp;166
						.social-icons.d-flex.align-items-center
							img(src="images/whatsapp.svg" alt="WhatsApp" title="")
							img(src="images/viber.svg" alt="Viber" title="")
							img(src="images/telegram.svg" alt="Telegram" title="")
						.header-info.text-right
							img(src="images/phone.svg" alt="phone" title="Звоните круглосуточно")
							a(href="tel:88005505383") +7 (800) 550-53-83
							br
							span с 09:00 до 21:00 без&nbsp;выходных
		include nav
mixin Tab(selector, title, checked)
	li
		if (checked)
			input(type="radio" name="Tabs" checked)&attributes({'id': selector})
		else 
			input(type="radio" name="Tabs")&attributes({'id': selector})
		label&attributes({'for': selector})= title
		svg(width="24" height="24" fill="none" xmlns="http://www.w3.org/2000/svg")
			path(d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10zm0-14v8m-4-4h8")